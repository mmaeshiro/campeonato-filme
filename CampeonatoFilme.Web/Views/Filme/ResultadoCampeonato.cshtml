@model IEnumerable<CampeonatoFilme.Dominio.Entidade.Filme>

@{
    ViewBag.Title = "Resultado";
    Layout = null;
}

<div class="jumbotron colorJumbotron">

    <div class="col-lg-12">
        <h5 class="text-center campeonatoFilme">CAMPEONATO DE FILMES</h5>
    </div>

    <div class="col-lg-12">
        <h2 class="text-center"><strong class="colorFaseSelecao">Resultado Final</strong></h2>
    </div>

    <div class="row">
        <hr size="10" class="linha">
    </div>

    <div class="row">
        <div class="col-lg-12">
            <p class="text-center colorFaseSelecao">Veja o resultado final do campeonato de filmes de forma simples e rápida.</p>
        </div>
    </div>

</div>



@for (var i = 0; i < Model.Count(); i++)
{
    <div class="row">

        <div class="col-lg-1 colorFaseSelecao divBoxResultado">
            <label class="lblColocacao"><span>@(i + 1)º</span></label>
        </div>

        <div class="col-lg-9 colorFaseSelecao divBoxResultado2">
            <label class="lblColocacao2"><span>@Model.ElementAtOrDefault(i).titulo</span></label>
        </div>

    </div>
}





